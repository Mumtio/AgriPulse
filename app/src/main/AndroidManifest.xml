<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Camera feature required to get frames -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <!-- Camera permission required to get frames -->
    <uses-permission android:name="android.permission.CAMERA"/>
    <!-- Internet permission required to communicate with camera internal resources (via SDK) due to ACE architectural design -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.AceCameraSample" >

        <activity android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            tools:ignore="DiscouragedApi,LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- FileProvider for sharing files securely -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- OpenCL library is available on ACE platform. -->
        <!-- And can be enabled for app with the below entry in Manifest: -->
        <!--        <uses-native-library-->
        <!--            android:name="libOpenCL.so"-->
        <!--            android:required="false"/>-->

    </application>
</manifest>
