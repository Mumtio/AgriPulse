<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="#E6F4EA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Status Indicator -->
        <View
            android:id="@+id/statusIndicator"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/status_dot_green"
            android:layout_marginEnd="12dp"/>

        <!-- Animal Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/animalIdText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Animal ID: DC–014"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#1F2933"/>

            <TextView
                android:id="@+id/animalTypeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dairy Cattle"
                android:textSize="13sp"
                android:textColor="#6B7280"/>

            <TextView
                android:id="@+id/lastScanText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last scan: Today · 6:45 AM"
                android:textSize="12sp"
                android:textColor="#6B7280"/>
        </LinearLayout>

        <!-- Temperature & Status -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/tempText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="39.7 °C"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#1F2933"/>

            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High"
                android:textSize="13sp"
                android:textColor="#D32F2F"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
