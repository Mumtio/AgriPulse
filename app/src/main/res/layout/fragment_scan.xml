<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Camera Preview Placeholder -->
    <FrameLayout
        android:id="@+id/cameraContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.flir.atlassdk.acecamerasample.OverlayView
        android:id="@+id/overlayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



    <!-- Scan Overlay Box -->
    <View
        android:id="@+id/scanOverlay"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:background="@drawable/focus_outline"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tempText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--.- Â°C"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="@id/scanOverlay"
        app:layout_constraintBottom_toBottomOf="@id/scanOverlay"
        app:layout_constraintStart_toStartOf="@id/scanOverlay"
        app:layout_constraintEnd_toEndOf="@id/scanOverlay"/>




    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/textScanHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Align animal face in frame"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- Bottom Controls -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/buttonScan"
            android:layout_width="220dp"
            android:layout_height="56dp"
            android:text="SCAN"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:backgroundTint="#2E7D32"/>
        <Button
            android:id="@+id/buttonShare"
            android:layout_width="220dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:text="ðŸ“¤ Share with Vet"
            android:backgroundTint="#1565C0"
            android:textColor="@android:color/white"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/textScanResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="14sp"/>


        <TextView
            android:id="@+id/textExplanation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text=""
            android:textColor="#E0E0E0"
            android:textSize="14sp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
